html
	head
		link(rel='stylesheet' href='/reset.css')

		block head
			
		style
			:sass
				canvas, .front
					position: absolute
					left: 0
					top: 0
					width: 100%
					height: 100%

				.front
					padding: 30px
					font-family: monospace
					color: #242424

	body
		canvas
		.front

		script.
			function log(...args) {

				console.log(...args)

				let p = document.createElement('p')

				p.innerHTML = args.join(' ')

				document.querySelector('.front').appendChild(p)

			}

			function test(name, n, callback) {

				let t = -performance.now()

				callback()

				t += performance.now()

				log(name, 'x' + n, t.toFixed(3) + 'ms', (1e3 * t / n).toFixed(3) + 'Âµs/op')

			}

			function logNewLine() {

				let p = document.createElement('p')

				p.innerHTML = '&nbsp;'

				document.querySelector('.front').appendChild(p)

				console.log('')

			}

			let canvas = document.querySelector('canvas')
			canvas.width = innerWidth * 2
			canvas.height = innerHeight * 2

		block body